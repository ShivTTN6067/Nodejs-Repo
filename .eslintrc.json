{
    "env": {
        "es2021": true,
        "node": true
    },
    "root": true,
    "extends":  "",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
      ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "indent": ["error", "tab"],
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
              "argsIgnorePattern": "next",
              "args": "none",
              "ignoreRestSiblings": true
            }
          ]
    }
}
